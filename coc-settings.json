{
  "coc.preferences.extensionUpdateCheck": "daily",
  "rust-analyzer.serverPath": "/home/samuel/.cargo/bin/rust-analyzer",
  "rust-analyzer.inlayHints.refreshOnInsertMode": true,
  "rust-analyzer.cargo.allFeatures": true,
  "explorer.width": 30,
  "explorer.file.autoReveal": true,
  "explorer.keyMappings.global": {
      "v": "open:vsplit"
  },
  
  "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                ".ccls-root",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        }
    },
    "lua.enable": true,
    "lua.commandPath": "/usr/bin/lua-lsp",
    "lua.version": "5.4"
}

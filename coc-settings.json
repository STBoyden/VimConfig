{
  "coc.preferences.extensionUpdateCheck": "daily",
  "coc.preferences.formatOnSaveFiletypes": ["elm"],
  "rust-analyzer.server.path": "/home/samuel/.cargo/bin/rust-analyzer",
  "rust-analyzer.inlayHints.refreshOnInsertMode": true,
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.diagnostics.disabled": ["unresolved-proc-macro"],
  "explorer.width": 30,
  "explorer.file.autoReveal": true,
  "explorer.keyMappings.global": {
      "v": "open:vsplit"
  },
  "codeLens.enable": true,
  "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                ".ccls-root",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "elmLS": {
            "command": "elm-language-server",
            "filetypes": ["elm"],
            "rootPatterns": ["elm.json"]
        }
    },
    "lua.enable": true,
    "lua.commandPath": "/usr/bin/lua-lsp",
    "lua.version": "5.4"
}

